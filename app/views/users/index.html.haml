- provide(:title, 'All users')
.container
  .row
    %h1 All users

    = will_paginate

    %ul.users
      = render @users

    = will_paginate


    / %p#notice= notice
    / %h1 Listing Users
    / %table
    /   %thead
    /     %tr
    /       %th Name
    /       %th Email
    /       %th{:colspan => "3"}
    /   %tbody
    /     - @users.each do |user|
    /       %tr
    /         %td= user.name
    /         %td= user.email
    /         %td= link_to 'Show', user
    /         %td= link_to 'Edit', edit_user_path(user)
    /         %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }
    %br
    = link_to 'New User', new_user_path
