        =link_to(image_tag("ext-logo-alist.png", alt:'a-list logo'), "http://kcra.cityvoter.com/married-to-massage/biz/670341")
      .ext-logo.opeiu
        =link_to(image_tag("ext-logo-opeiu.png", alt:'opeiu logo'), "http://www.opeiu.org/")
      .ext-logo.ima
        =link_to(image_tag("official-logo-ima.png", alt:'IMA logo'), "#")
