- provide(:title, 'News')
#News
  %section.clearfix{role: "top"}
    %article
      - @newsPosts.each do |newsPost|
        .post
          %h1= newsPost.title
          .truncated
            = newsPost.content.html_safe
          %p= link_to 'Read More Â»', newsPost.external_link, class: 'link', :target => "_blank"
          %span.dateline
            Published
            = newsPost.published_at
      .post
        = render 'layouts/addto'
      =paginate @newsPosts