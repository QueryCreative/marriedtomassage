$(function() {
	window.preloader = new Preloadit({
		images: [
			"#{image_url('logo.png'}",
		]
	});
});

$(document).on("ready page:reload", function () {
	$l = $('#loader-gif');
	if (!$l.data('original_source')) {
		$l.data('original_source', $l.attr('source'));
	}
	$l.attr('src',$l.attr('src')+"?"+Math.random());
	$("#loader").delay(3600).fadeOut(1400);
});
